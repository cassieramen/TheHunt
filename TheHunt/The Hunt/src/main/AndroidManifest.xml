<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thehunt.app" >
    <uses-sdk
        android:minSdkVersion="12" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="com.thehunt.app.SignIn"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name="com.thehunt.app.HomeFeed"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.thehunt.app.HuntDescription"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.HuntChallenge"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.HuntChallengeSummary"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.HuntPhotos"
                  android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.Logout"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.SettingsPage"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.thehunt.app.CreateAHunt"
                  android:screenOrientation="portrait"></activity>
    </application>

</manifest>
