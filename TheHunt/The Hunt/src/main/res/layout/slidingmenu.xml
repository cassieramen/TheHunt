<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <ImageView android:id="@+id/prof_pic"
               android:src="@drawable/alex"
               android:layout_width="80dip"
               android:layout_height="80dip"
               android:padding="5dip"/>

    <TextView android:id="@+id/user_name"
              android:layout_height="80dip"
              android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/prof_pic"
              android:text="Alex Hollenbeck"
              android:textSize="26sp"
              android:textColor="@color/white"
              android:textAlignment="center"
              />

    <TextView android:id="@+id/news_feed"
              android:layout_height="50dip"
              android:layout_width="wrap_content"
              android:layout_below="@+id/prof_pic"
              android:text="News Feed"
              android:textSize="26sp"
              android:textColor="@color/white"
            />

    <TextView android:id="@+id/current_hunts"
              android:layout_height="50dip"
              android:layout_width="wrap_content"
              android:layout_below="@+id/news_feed"
              android:text="Current Hunts"
              android:textSize="26sp"
              android:textColor="@color/white"
            />


    <TextView android:id="@+id/create"
              android:layout_height="50dip"
              android:layout_width="wrap_content"
              android:layout_below="@+id/current_hunts"
              android:text="Create a Hunt"
              android:textSize="26sp"
              android:textColor="@color/white"
            />

    <TextView android:id="@+id/settings"
              android:layout_height="50dip"
              android:layout_width="wrap_content"
              android:layout_below="@+id/create"
              android:text="Settings"
              android:textSize="26sp"
              android:textColor="@color/white"
            />

    <TextView android:id="@+id/log_out"
              android:layout_height="50dip"
              android:layout_width="wrap_content"
              android:layout_below="@+id/settings"
              android:text="Log out"
              android:textSize="26sp"
              android:textColor="@color/white"
              />

</RelativeLayout>