<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/header"
        android:id="@+id/header"/>

    <RelativeLayout
        android:id="@+id/topStuff"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_below="@id/header">
        <TextView
            android:id = "@+id/title_text"
            android:layout_width="240dip"
            android:layout_height="match_parent"
            android:textSize="60sp"
            android:text="Brewery Hunt"
            android:gravity="center_vertical"
            android:textColor="@color/charcoal"/>

        <ImageView
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_text"
            android:src="@drawable/brewery"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/topStuff"
        android:text="TAGS:DRINKING,BEER..."
        android:textColor="@color/forestYellow"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tags"
        android:text="Explore Lincoln Park!"
        android:textSize="30sp"
        android:textColor="@color/charcoal"/>

</RelativeLayout>